extends ../../templates/page-template
include ../../blocks/SeasonGreeting/SeasonGreeting
include ../../blocks/QuickLinks/QuickLinks
include ../../blocks/Results/Results
include ../../blocks/Slider/Slider
include ../../blocks/SPAForm/SPAForm
include ../../blocks/GreetingWrapper/GreetingWrapper
include ../../blocks/Description/Description
include ../../blocks/CloseEvents/CloseEvents
include ../../blocks/Spray/Spray

block title
    title Осень

block content
    -
        const greeting = {
            text: 'Многие отказываются от путешествий осенью, думая, что будет нечем заняться: слякоть, сырость, переменчивая погода. Но всё это предрассудки! </br></br>В «Сюгеш» будет, чем заняться и в этот сезон. <strong>Устройте для себя и своей семьи «Осеннюю перезагрузку».</strong>',
            buttonText: 'Забронировать дом',
            link: 'https://booking.sugesh.ru/',
            iconText: 'ОСЕНЬ',
            icon: '../../assets/img/leaf-brown.svg'
        }
        const cards = [
            {
                title: 'Вкусные трапезы в кафе «Братец кролик»',
                text: "Детское меню, горячие напитки и вкусные блюда - все для вашего гастрономического наслаждения. </br></br>Забудьте о хлопотах, наслаждайтесь отдыхом и закажите вкусные блюда в кафе «Сюгеш» (при аренде дома завтрак входит в стоимость проживания).",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn1.jpg',
                isRight: true,
                defaultCover: false
            },
            {
                title: "Вдохновляющие пешие прогулки, любование природой Хакасии или тренировки на свежем воздухе.",
                text: "На территории базы отдыха регулярно проводится уборка, поэтому вы сможете насладиться прогулкой по чистым пешеходным дорожкам.</br></br> Прогулки или занятия спортом на свежем весеннем воздухе — прекрасный подарок для организма после холодной зимы.",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn2.jpg'
            },
            {
                title: 'Занятия спортом на свежем воздухе',
                text: "Огромное пространство для комфортных занятий спортом на свежем воздухе в окружении кедрового леса.",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn3.jpg',
                isRight: true
            },
            {
                title: 'Увлекательные мастер-классы для детей и взрослых',
                text: "Актуальные события – самое интересное впереди! Следите за обновлениями, и вы не пропустите ничего важного",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn4.jpg'
            },
            {
                title: "Экскурсии на Саяно-Шушенскую ГЭС</br><p class='infoCard__subtitle'>Форелевое хозяйство</p>",
                text: "По вашему запросу мы можем организовать экскурсию для 3-5 человек на Саяно-Шушенскую ГЭС, самую мощную гидроэлектростанцию России. Можно также посетить форелевое хозяйство, где вы сможете приобрести форель, которую поймают прямо при вас. Рыбу можно приготовить сразу там же или привезти на базу отдыха «Сюгеш», чтобы повара нашего кафе приготовили блюдо для вас. <strong>Подробности уточняйте у администратора.</strong>",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn5.jpg',
                isRight: true,
            },
            {
                title: 'Катание на моторной или аэролодке',
                text: "Прокатитесь на моторной или аэролодке по реке и насладитесь пейзажами Хакасии с другого ракурса. </br></br>Вдохните свежий речной воздух, перемешанный с влагой от реки, и насладитесь прекрасным отдыхом! Подробности уточняйте у администратора. ",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn6.jpg'
            },
            {
                title: 'Сбор опят и мастер-класс по приготовлению блюд из них',
                text: "По вашему запросу мы можем организовать общий сбор опят, а после привезти их нашим поварам в кафе «Сюгеш», они приготовят свежие блюда из грибов специально для вас!",
                img: '../../assets/img/infoCardAutumn/infoCardAutumn7.jpg',
                isRight: true,
            }
        ]
    +Spray()
    +GreetingWrapper.autumn()
        +SeasonGreeting(greeting)
        +Slider({slides: ['../../assets/img/autumn/autumn_1.jpg', '../../assets/img/autumn/autumn_2.jpg', '../../assets/img/autumn/autumn_3.jpg', '../../assets/img/autumn/autumn_4.jpg', '../../assets/img/autumn/autumn_5.jpg', '../../assets/img/autumn/autumn_6.jpg', '../../assets/img/autumn/autumn_7.jpg']})
    +SPAForm()
    +Description({title: 'Чем заняться в «Сюгеше» осенью?', cards})
    +QuickLinks(true)
    +CloseEvents({
        text: 'Актуальные события – самое интересное впереди! Следите за обновлениями, и вы не пропустите ничего важного',
        slides: ['../../assets/img/autumn/autumn_1.jpg', '../../assets/img/autumn/autumn_2.jpg', '../../assets/img/autumn/autumn_3.jpg']
    })
    +Results()
